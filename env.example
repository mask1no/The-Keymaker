# ==========================================
# Keymaker Environment Configuration
# ==========================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env* files to version control

# ==========================================
# CORE SECRETS (Required in Production)
# ==========================================

# Session secret for HMAC signing (required, >=32 chars)
# Generate with: openssl rand -hex 32
KEYMAKER_SESSION_SECRET=

# ==========================================
# RPC ENDPOINTS (Required)
# ==========================================

# Primary RPC URL (Helius recommended for production)
HELIUS_RPC_URL=

# Public RPC URL (exposed to client for read operations)
NEXT_PUBLIC_HELIUS_RPC=

# ==========================================
# API SECURITY (Recommended)
# ==========================================

# Engine API token (protects /api/engine/* endpoints, >=16 chars)
# Generate with: openssl rand -hex 16
ENGINE_API_TOKEN=

# ==========================================
# EXTERNAL API KEYS (Optional)
# ==========================================

# Birdeye API key (for token price data and market info)
BIRDEYE_API_KEY=

# ==========================================
# MONITORING (Optional)
# ==========================================

# Sentry DSN for error tracking
SENTRY_DSN=

# ==========================================
# NOTES
# ==========================================
# 1. Never commit .env* files to version control
# 2. All secrets are server-only and validated at startup
# 3. See ENVIRONMENT.md for complete setup instructions

